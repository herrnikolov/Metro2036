@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@model IEnumerable<UserListingServiceModel>

<h2>All users</h2>

<table class="table table-condensed table-bordered" header header-content="User Management">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.First().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.First().TravelCardId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.TravelCardId
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary">Details</a>*@

                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" onclick="return confirm('Do you really want to delete this user?');" class="btn btn-danger">
                            Delete
                        </button>
                    </form>
                    @*<a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>