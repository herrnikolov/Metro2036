@model UserListingViewModel

@{
    ViewBag.Title = "Users";
}
<h1>All users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
                TravelCardId
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
            {
            <tr>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.TravelCardId
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary">Details</a>
                </td>
            </tr>
            }
    </tbody>
</table>
